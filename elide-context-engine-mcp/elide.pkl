amends "elide:project.pkl"

name = "Elide Context Engine MCP"
description = "MCP server providing memory, analysis, and optional embeddings for AI coding assistants."
version = "0.1.0"

# Entrypoint for stdio MCP (run via `elide --host:allow-all ./src/server.mjs`)
[javascript]
entrypoint = "./src/server.mjs"

[python]
version = "3.11"

[kotlin]
version = "24"

[workspaces]
root = "."

[scripts]
run = "elide --host:allow-all ./src/server.mjs"

[env]
ELIDE_MCP_MODE = "augment"
ELIDE_MCP_EMBEDDINGS = "auto"

