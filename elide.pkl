// Enable this for local type-hints without LSP support.
//amends "./packages/cli/src/main/pkl/project.pkl"

amends "elide:project.pkl"

name = "elide"
version = "1.0.0-beta2"
description = "Polyglot runtime and toolchain"

local reactVersion = "18.3.1"
local graalvmVersion = "24.2.0"

workspaces {
  "crates/*"
  "packages/*"
  "tools/elide-build"
  "tools/umbrella"
}

jvm {
  target = 22
}

kotlin {
  apiLevel = "1.9"
  languageLevel = "1.9"
}

dependencies {
  maven {
    catalogs {
      "gradle/elide.versions.gradle"
    }
    packages {
      "org.graalvm.sdk:graal-sdk:\(graalvmVersion)"
    }
    repositories {
      ["elide"] = "https://maven.elide.dev"
      ["attic"] = "https://jpms.pkg.st/repository"
    }
  }
  npm {
    packages {
      "browserslist@4.24.4"
      "cssnano@7.0.6"
      "esbuild@0.25.2"
      "google-protobuf@3.21.4"
      "jszip@3.10.1"
      "lz-string@1.5.0"
      "postcss@8.5.3"
      "preact@10.26.5"
      "react@\(reactVersion)"
      "react-dom@\(reactVersion)"
      "typescript@5.8.3"
    }
    devPackages {
      "@biomejs/biome@1.9.4"
      "@commitlint/cli@19.8.0"
      "@commitlint/config-conventional@19.8.0"
      "@mdx-js/esbuild@3.1.0"
      "@mitata/counters@0.0.8"
      "@prettier/plugin-xml@3.4.1"
      "@types/google-protobuf@3.15.12"
      "@types/node@22.14.1"
      "bun@1.2.9"
      "bun-types@1.2.9"
      "commitlint@19.8.0"
      "esbuild@0.25.0"
      "eslint@9.24.0"
      "express@4.21.2"
      "husky@9.1.7"
      "lint-staged@15.5.1"
      "mitata@1.0.34"
      "postcss-cli@11.0.1"
      "prettier@3.5.3"
      "prettier-plugin-java@2.6.7"
      "prettier-plugin-properties@0.3.0"
      "prettier-plugin-sh@0.17.2"
      "prettier-plugin-toml@2.0.4"
    }
  }
}
