amends "elide:project.pkl"

name = "wsgi-flask"

local reactVersion = "18.3.1"

python {
  wsgi {
    factory = "make_app"
    args { "Example" "1.0" }

    port = 3000
    workers = 1
  }
}

dependencies {
  pip {
    packages { "flask" }
  }

  npm {
    packages {
      "react@\(reactVersion)"
      "react-dom@\(reactVersion)"
    }
  }
}
